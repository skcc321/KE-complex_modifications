              "value": 1
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "comma"
          },
          "to": [
            {
              "key_code": "2"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "numeric_keypad_mode",
              "value": 1
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "period"
          },
