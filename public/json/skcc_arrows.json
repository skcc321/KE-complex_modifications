{
  "title": "Arrows",
  "rules": [
    {
      "description": "Arrows Trigger [: as trigger key]",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "z"
          },
          "to": [
            {
              "set_variable": {
                "name": "arrow_mode",
                "value": 1
              }
            }
          ],
          "to_if_alone": [
            {
              "key_code": "z"
            }
          ],
          "to_after_key_up": [
            {
              "set_variable": {
                "name": "arrow_mode",
                "value": 0
              }
            }
          ]
        }
      ]
    },
    {
      "description": "Arrow Mode",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "i"
          },
          "to": [
            {
              "key_code": "up_arrow"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "arrow_mode",
              "value": 1
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "j"
          },
          "to": [
            {
              "key_code": "left_arrow"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "arrow_mode",
              "value": 1
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "k"
          },
          "to": [
            {
              "key_code": "down_arrow"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "arrow_mode",
              "value": 1
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "l"
          },
          "to": [
            {
              "key_code": "right_arrow"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "arrow_mode",
              "value": 1
            }
          ]
        }
      ]
    }
  ]
}
